doctype html
html
    head
        meta(charset="UTF-8")
        meta(content="width=device-width, minimum-scale=1, maximum-scale=1", name="viewport")
        block title
            title #{site.title}
            //- if file.title
            //-     | #{file.title} – #{site.title}
            //- else
            //-     | #{site.title}
    
        link(href='http://fonts.googleapis.com/css?family=Roboto:400,300,500,700,400italic&subset=latin,cyrillic' rel='stylesheet')
        link(rel="stylesheet", href=asset("/styles/font-awesome.min.css"))
        link(rel="stylesheet", href=asset("layout.min.css"))
        script(src="/assets/js/jquery.min.js")
        script(src="/assets/js/jquery.slimscroll.min.js")
        script(src="/assets/js/site.js")
        block header
    body(style="background-image: url(/assets/img/#{bodyBg});")
        block container
            .main-wrapper
                a(href="#").logo
                    img(src="/assets/img/logo.png")
                block content

        block arrow-prev
            a.nav-arrow.prev(href="")
                i.fa.fa-chevron-left
                | Назад
        block arrow-next
            a.nav-arrow.next(href="")
                | Далі
                i.fa.fa-chevron-right
        +b.menu: +i